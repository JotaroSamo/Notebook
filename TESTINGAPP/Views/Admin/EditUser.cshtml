@model TESTINGAPP.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link href="~/css/EditUser.css" rel="stylesheet">
    <a asp-area="" asp-controller="Home" asp-action="Logout">Log out</a>
</head>
<body>
    <h1>Edit User</h1>
    <form asp-controller="Admin" asp-action="UpdateUser" method="post">
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label asp-for="Age">Age:</label>
            <input asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </div>
        <div>
            <label asp-for="Role">Role:</label>
            <select asp-for="Role">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
            <span asp-validation-for="Role"></span>
        </div>
        <button type="submit">Save</button>
    </form>
</body>
</html>