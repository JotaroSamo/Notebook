@using Notebook.Common.Dto
@model List<RecordDto>
@{ViewData["Title"] = "Record List";}
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="back">
    <header class="header_up">
        <a class="abutton" asp-area="" asp-controller="Home" asp-action="Logout">Log out</a>
    </header>
    @if (User.IsInRole("Admin"))
    {
        <a class="abutton" asp-area="" asp-controller="Admin" asp-action="Tools">Admin Panel</a>
    }
    <div>
        <a class="abutton" asp-area="" asp-controller="UserWork" asp-action="AddRecord">New Record</a>
    </div>
    <form asp-controller="UserWork" asp-action="SearchRecord" method="post">
        <div class="search-container">
            <input type="search" class="form-control" name="searchString" placeholder="Search...">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Description</th>
                <th>Categories</th>
                <th>Url</th>
                <th>Img</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.Date</td>
                    <td>@record.Title</td>
                    <td>@record.Description</td>
                    <td>@record.Categories</td>
                    <td>@record.Url</td>
                    <td>
                        @if (record.Photo != null)
                        {
                            <img style="max-height: 300px; max-width: 200px;" src="data:image/png;base64,@Convert.ToBase64String(record.Photo)" alt="Record photo" />
                        }
                    </td>
                    <td>
                        <form class="abutton" asp-action="DeleteRecord" asp-controller="UserWork" method="get">
                            <input type="hidden" name="id" value="@record.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <br/>
                        <form class="abutton" asp-action="EditRecord" asp-controller="UserWork" method="get">
                            <input type="hidden" name="id" value="@record.Id" />
                            <input type="hidden" name="UserId" value="@record.UserId" />
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
